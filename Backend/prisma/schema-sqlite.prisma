// Prisma Schema for Smart Library System - SQLite Version
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// User model - supports Admin, Librarian, and Student roles
model User {
  id            String         @id @default(uuid())
  email         String         @unique
  password      String
  name          String
  role          Role           @default(STUDENT)
  department    String?
  studentId     String?        @unique
  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  
  borrowRecords BorrowRecord[]
  systemLogs    SystemLog[]

  @@map("users")
}

// Book model - tracks both physical and digital resources
model Book {
  id                String         @id @default(uuid())
  title             String
  author            String
  isbn              String?        @unique
  category          String
  description       String?
  publicationYear   Int?
  quantity          Int            @default(1)
  availableQuantity Int            @default(1)
  digitalUrl        String?
  coverImage        String?
  isActive          Boolean        @default(true)
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  
  borrowRecords     BorrowRecord[]

  @@map("books")
}

// Borrow Record model - tracks book lending
model BorrowRecord {
  id         String           @id @default(uuid())
  userId     String
  bookId     String
  borrowDate DateTime         @default(now())
  dueDate    DateTime
  returnDate DateTime?
  status     BorrowStatus     @default(BORROWED)
  fineAmount Float            @default(0)
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt
  
  user       User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  book       Book             @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@map("borrow_records")
}

// System Log model - audit trail for all activities
model SystemLog {
  id        String   @id @default(uuid())
  userId    String?
  action    String
  details   String?
  timestamp DateTime @default(now())
  
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("system_logs")
}

// Enums
enum Role {
  ADMIN
  LIBRARIAN
  STUDENT
}

enum BorrowStatus {
  PENDING
  BORROWED
  RETURNED
  OVERDUE
  REJECTED
}

// System Settings model
model SystemSettings {
  id                String   @id @default(uuid())
  libraryName       String   @default("SmartLibrary")
  maxBorrowDuration Int      @default(14)
  maxBooksPerUser   Int      @default(5)
  fineAmountPerDay  Float    @default(0.50)
  updatedAt         DateTime @updatedAt
  
  @@map("system_settings")
}
